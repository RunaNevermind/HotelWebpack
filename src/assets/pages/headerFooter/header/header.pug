mixin header(name='', lastName='')
  head
    style
      include ./header.scss
  .header-footer__header  
    .colorLogo
      img(src=require("./assets/img/colorLogo.png"), alt="Toxin")
    .header-footer__header__text
      .header-footer__header__text__burger
        a.header-footer__header__text__burger__a.text(href="http://")  О нас
        a.header-footer__header__text__burger__a.text(href="http//") Услуги
          a(class='_icon-extend-more' href="http://")
        a.header-footer__header__text__burger__a.text(href="http://")  Вакансии
        a.header-footer__header__text__burger__a.text(href="http://")  Новости
        a.header-footer__header__text__burger__a.text(href="http://") Соглашения
          a(class='_icon-extend-more' href="http://")
        .header-footer__header__registration
          if name, lastName
            .header-footer__header__registration__name.text #{name} #{lastName}
          else
            .header-footer__header__registration
              button.header-footer__header__registration__button.subsubtitle(href="http://") войти
              button.header-footer__header__registration__button.subsubtitle(href="http://") зарегистрироваться

